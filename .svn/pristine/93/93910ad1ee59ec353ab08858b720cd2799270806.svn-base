					model.LobeSplit=row["LobeSplit"].ToString();
				}
				if(row["TreatLobeVolumn"]!=null)
				{
					model.TreatLobeVolumn=row["TreatLobeVolumn"].ToString();
				}
				if(row["UnTreatLobeVolumn"]!=null)
