        private void ComputerSmokeIndex()
        {
            decimal year = this.txtSmokeYear.Value;
            decimal smokePerDay = this.txtSmokePerDay.Value;
            decimal smokeIndex = year * 365 * smokePerDay;
            this.txtSmokeIndex.Text = smokeIndex.ToString("f1");
        }

